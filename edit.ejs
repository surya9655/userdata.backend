<%- include("header.ejs") %>
<div class="container mt-5">
    <h2>Edit User</h2>
    <!-- Ensure method is POST and use _method field to override to PUT -->
    <form action="/api/edit/<%= user._id %>" method="POST">
        <input type="hidden" name="_method" value="PUT" /> <!-- This allows method override -->
        <div class="form-group">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control" name="firstname" value="<%= user.firstname %>" required>
        </div>
        <div class="form-group">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control" name="lastname" value="<%= user.lastname %>" required>
        </div>
        <div class="form-group">
            <label for="phonenumber">Mobile Number</label>
            <input type="text" class="form-control" name="phonenumber" value="<%= user.phonenumber %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Update User</button>
    </form>
</div>
<%- include("footer.ejs") %>
