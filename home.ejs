<%- include("header.ejs") %>

<div class="container mt-5">
    <h2>User List</h2>
    <a href="/api/add" class="btn btn-success mb-2">Add User</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>
                <td><%= user.phonenumber %></td>
                <td>
                    <a href="/api/edit/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/api/delete/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include("footer.ejs") %>
